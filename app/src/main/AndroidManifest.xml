<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stefan.reserv">

    <application
        android:allowBackup="true"
        android:icon="@drawable/reserv_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/reserv_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Reserv.NoActionBar">
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BookView"
            android:exported="true" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"/>
        <activity
            android:name=".BookList"
            android:exported="true" />
        <activity
            android:name=".RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".Add.QuickAddGrade"
            android:exported="true" />
        <activity
            android:name=".Add.QuickAddBook"
            android:exported="true" />
        <activity
            android:name=".Add.QuickAddGenre"
            android:exported="true" />
        <activity android:name=".MainActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>